<!-- {{ ansible_managed }} -->

<domain type='kvm'>
  <name>{{ libvirt_instance_name }}</name>
  <memory unit='GiB'>{{ libvirt_instance_memory }}</memory>
  <vcpu>2</vcpu>

  <os>
    <type arch='i686' machine='pc'>hvm</type>
    <boot dev='hd'/>
    <bootmenu enable='yes'/>
  </os>

  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>

  <clock offset='utc'/>

  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>

  <devices>
    <disk type='block' device='disk'>
      <driver name='qemu' type='qcow2' cache='writeback'/>
      <source dev='{{ libvirt_instance_img }}'/>
      <target dev='vda' bus='virtio'/>
    </disk>

{%  for left_node, left_link, right_node, right_link in left_nodes, left_links, right_nodes, right_links %}
{%    if inventory_hostname ~ left_node %}
    <devices>
      <interface type='udp'>
        <source address='{{ right_node }}' port='{{ 10000+right_link }}'>
          <local address='{{ left_node }}' port='{{ 10000+left_link }}'/>
        </source>
      </interface>
    </devices>
{%    elif inventory_hostname ~ right_node %}
  <devices>
    <interface type='udp'>
      <source address='{{ left_node }}' port='{{ 10000+left_link }}'>
        <local address='{{ right_node }}' port='{{ 10000+right_link }}'/>
      </source>
    </interface>
  </devices>
{%    endif %}
{%  endfor %}

    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target type='serial' port='0'/>
    </console>

    <input type='mouse' bus='ps2'/>
    <graphics type='vnc' port='-1' autoport='yes'/>

    <video>
      <model type='cirrus' vram='9216' heads='1'/>
    </video>
  </devices>
</domain>
